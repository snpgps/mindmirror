rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to all documents for any authenticated user
    // WARNING: These rules are insecure and for development purposes only.
    // Replace with more restrictive rules before deploying to production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
